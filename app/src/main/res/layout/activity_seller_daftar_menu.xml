<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerHomeActivity">

    <RelativeLayout
        android:id="@+id/rell"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#011A3B"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <TextView
            android:id="@+id/nama_resto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorfav2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:text="NAMA RESTO"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rell">
        <TextView
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="LIST MENU"
            android:background="@drawable/rounded_shape2"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_daftarmenu_seller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/BottomNavigation"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_title"
        >
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>