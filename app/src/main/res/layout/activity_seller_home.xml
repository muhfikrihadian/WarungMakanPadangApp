<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".Sellers.SellerHomeActivity">

    <ImageView
        android:id="@+id/logo_resto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_app_nobg"
        />

    <TextView
        android:id="@+id/seller_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME SELLER"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/logo_resto"
        android:textColor="@color/colorfav"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/rell1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/seller_welcome"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/daftar_menu_seller_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/list_menu"/>

        <Button
            android:id="@+id/tambah_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/add_menu"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rell2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rell1"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/maintain_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/update_menu"/>

        <Button
            android:id="@+id/check_orders_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/cek_order"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rell3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rell2"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/info_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/update_profil"/>

        <Button
            android:id="@+id/histori_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/histori_order"/>
    </LinearLayout>

    <Button
        android:id="@+id/seller_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_shape2"
        android:text="LOGOUT"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"/>

</RelativeLayout>