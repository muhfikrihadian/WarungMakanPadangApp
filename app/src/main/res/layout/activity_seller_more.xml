<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerMoreActivity">

    <RelativeLayout
        android:id="@+id/rell"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorfav"
        android:layout_alignParentTop="true"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFE478"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:text="Profil Saya" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/seller_profil_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_person"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorfav" />

    <TextView
        android:id="@+id/seller_profil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"
        android:textColor="@color/colorfav"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/seller_profil_image"/>

    <TextView
        android:id="@+id/seller_profil_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/colorfav"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/seller_profil_name"
        android:layout_toRightOf="@+id/seller_profil_image"/>

    <TextView
        android:id="@+id/seller_profil_nomorhp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/colorfav"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/seller_profil_email"
        android:layout_toRightOf="@+id/seller_profil_image"/>

    <Button
        android:id="@+id/ubah_btn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/seller_profil_image"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_shape"
        android:text="Update Profile"
        android:textColor="@color/colorfav2" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/rell"
        app:cardElevation="15dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorfav">
        <TextView
            android:id="@+id/alamat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textStyle="bold"
            android:textColor="@color/colorfav2"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/seller_profil_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorfav2"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_shape"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:text="Logout"
        android:textStyle="bold"
        android:textColor="@color/colorfav2"
        android:textSize="20sp" />

</RelativeLayout>