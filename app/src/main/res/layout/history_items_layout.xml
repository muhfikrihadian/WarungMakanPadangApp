<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rounded_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/histori_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="tanggal"
                android:textSize="14sp"
                android:textColor="@color/colorfav2"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/histori_resto_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resto"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/colorfav2"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/histori_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="waktu"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                android:textColor="@color/colorfav2"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorfav2"
                android:orientation="horizontal">
            </LinearLayout>
            <TextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/colorfav2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorfav2"
                    android:text="Nama Menu"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/histori_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorfav2"
                    android:textSize="15sp"
                    android:layout_marginLeft="98dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorfav2"
                    android:text="Harga"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/histori_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorfav2"
                    android:textSize="15sp"
                    android:layout_marginLeft="140dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/colorfav2"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/histori_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorfav2"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorfav2"
                    android:text="Delivery Fee"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/histori_product_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 7.000"
                    android:textColor="@color/colorfav2"
                    android:textSize="15sp"
                    android:layout_marginLeft="101dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorfav2"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorfav2"
                    android:text="Total Pembayaran"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/histori_total_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorfav2"
                    android:textSize="15sp"
                    android:layout_marginLeft="62dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>