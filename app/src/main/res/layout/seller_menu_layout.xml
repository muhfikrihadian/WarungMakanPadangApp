<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/backgroundCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/rell"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:background="@color/colorfav">
            <TextView
                android:id="@+id/seller_product_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Menu"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="@color/colorfav"
                android:background="@drawable/rounded_shape4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rell3"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_below="@+id/rell"
            android:background="@color/colorfav">
            <TextView
                android:id="@+id/seller_resto_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RM Padang 45"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorfav2"
                android:background="@color/colorfav"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/seller_select_product_image"
            android:layout_width="match_parent"
            android:layout_below="@+id/rell3"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/resto2"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/seller_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Rendang Balado"
            android:layout_below="@id/seller_select_product_image"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorfav"/>

        <TextView
            android:id="@+id/seller_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Rp 15000"
            android:layout_below="@+id/seller_product_name"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorfav"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>